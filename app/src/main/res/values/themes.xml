<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Mori" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="preferenceTheme">@style/App.Theme.Preference</item>

    </style>

    <style name="App.Widget.Preference.Mori" parent="Preference.Material">
        <item name="android:iconTint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="App.Widget.PreferenceCategory.Mori" parent="Preference.Category.Material">
        <item name="android:iconTint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="App.Theme.Preference" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceStyle">@style/App.Widget.Preference.Mori</item>
        <item name="preferenceCategoryStyle">@style/App.Widget.PreferenceCategory.Mori</item>
    </style>

    <style name="MyToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">30sp</item>

    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/MyToolbarTitleStyle</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Mori" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Mori.RoundedDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">24dp</item>
    </style>

</resources>